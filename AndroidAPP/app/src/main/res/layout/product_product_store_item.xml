<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imPhotoView"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        android:alpha="0.4"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="120dp"
        android:layout_width="120dp" />


    <ImageView
        android:id="@+id/imPhotoViewLogo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:alpha="0.7"
        app:layout_constraintStart_toStartOf="@id/imPhotoView"

        app:layout_constraintTop_toTopOf="@id/imPhotoView"
         />

    <Spinner
        android:id="@+id/spinner"
        app:layout_constraintStart_toEndOf="@id/imPhotoView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imPhotoView"
        app:layout_constraintBottom_toBottomOf="@id/imPhotoView"
        android:layout_centerHorizontal="true"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>