<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imPlanningProductPhotoView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imPlanningProductPhotoViewLogo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="@id/imPlanningProductPhotoView"
        app:layout_constraintTop_toTopOf="@id/imPlanningProductPhotoView"
        />

    <TextView
        android:id="@+id/tvPlanningProductProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/imPlanningProductPhotoView"
        app:layout_constraintBottom_toTopOf="@+id/imMinus"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/imMinus"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:drawableStart="@drawable/minus"
        android:text=""
        android:textColor="@color/white"
        android:background="@null"
        app:layout_constraintStart_toStartOf="@id/tvPlanningProductProductName"
        app:layout_constraintTop_toBottomOf="@id/tvPlanningProductProductName"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tvPlanningProductQty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="x3"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@id/imMinus"
        app:layout_constraintStart_toEndOf="@id/imMinus" />

    <Button
        android:id="@+id/imRemove"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:drawableStart="@drawable/plus"
        android:text=""
        android:textColor="@color/white"
        android:background="@null"
        app:layout_constraintStart_toEndOf="@id/tvPlanningProductQty"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/imMinus"
        />




</androidx.constraintlayout.widget.ConstraintLayout>